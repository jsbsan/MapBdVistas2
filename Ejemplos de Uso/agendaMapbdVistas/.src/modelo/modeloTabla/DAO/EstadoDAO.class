PUBLIC Function gridFormatearColumnas(grid AS GridView) as gridview
 Dim f As New Font
 f.name = "Sans"
 f.size =  me.sizefont
   me.formatearFechaIdioma()
   me.arrayAnchoColumnas = new integer[]
   WITH grid 
      .header = 3 
      .rows.count = 0 
      .columns.count = 2 
      .Columns[0].title = ("idestado")
      .Columns[0].width = -1'f.textwidth(("idestado")&"m")
       me.arrayAnchoColumnas.add(-1)
      .Columns[1].title = ("estado")
      .Columns[1].width = -1'f.textwidth(("estado")&"m")
       me.arrayAnchoColumnas.add(-1)
      .font.name = "Sans"
      .font.size = me.sizefont 
      .Background = 16777215 
      .Foreground = 0 
   END WITH
 grid.Mode = Select.Single
 Return grid 
END

