PUBLIC FUNCTION ConvertirResult(hr as result) AS EstadoVO[]
Dim datos as new EstadoVO[]
Dim datotmp as EstadoVO
While hr.available
 datotmp=new EstadoVO
try datotmp.idestado=hr["idestado"]
try datotmp.estado=hr["estado"]
try datos.add(datotmp)
hr.movenext
wend
return datos
end
