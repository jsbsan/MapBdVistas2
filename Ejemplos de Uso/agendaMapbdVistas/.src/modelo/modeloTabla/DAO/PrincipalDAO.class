Public Function registrar(NuevaPrincipal As PrincipalVO) As Boolean

  Dim conectar As New Conexion
  Dim SQLString As String
  Dim hresult As Result

  conectar.Conexion()
  hresult = conectar.hconn.Create("Principal")
  hresult["idprincipal"] = Null
  hresult["nombre"] = NuevaPrincipal.nombre
  hresult["apellido"] = NuevaPrincipal.apellido
  hresult["dni"] = NuevaPrincipal.dni
  hresult["movil"] = NuevaPrincipal.movil
  hresult["email"] = NuevaPrincipal.email
  hresult["domicilio"] = NuevaPrincipal.domicilio
  hresult.update
  conectar.hconn.commit
  conectar.desconectar()
  Return True

End

