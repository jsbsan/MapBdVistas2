  If (grid.Columns.COUNT < a + 1) Or a < 0 Then
    Message.Error("Error en la columna introducida para ordenar")
    grid.visible = True
    Return

  Endif
  For i = 0 To limite - 2

    For j = i To limite - 1
      If UCase$(Grid[i, a].Text) <= UCase$(Grid[j, a].Text) Then
        For col = 0 To grid.Columns.COUNT - 1
          cambio1 = Grid[j, col].Text
          Grid[j, col].text = Grid[i, col].Text
          Grid[i, col].text = cambio1
        Next
      Endif
    Next
  Next

End

Public Function ConvertirResult(hr As Result) As PrincipalVO[]

  Dim datos As New PrincipalVO[]
  Dim datotmp As PrincipalVO

  While hr.available
    datotmp = New PrincipalVO
    Try datotmp.idprincipal = hr["idprincipal"]
    Try datotmp.nombre = hr["nombre"]
    Try datotmp.apellido = hr["apellido"]
    Try datotmp.dni = hr["dni"]
    Try datotmp.movil = hr["movil"]
    Try datotmp.email = hr["email"]
    Try datotmp.domicilio = hr["domicilio"]
    Try datos.add(datotmp)
    hr.movenext
  Wend
  Return datos

End

